{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "app/components"
      ],
      "@store/*": [
        "app/store"
      ],
      "@utils/*": [
        "app/utils"
      ],
      "@style/*": [
        "app/style"
      ],
      "@page/*": [
        "app/page"
      ],
      "@static/*": [
        "app/static"
      ],
      "@images/*": [
        "app/images"
      ],
    },
    "target": "ES2018",
    "module": "CommonJS",
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
  },
  "exclude": [
    "test",
    "release",
    "app/main.prod.js",
    "app/renderer.prod.js",
    "app/dist",
    "dll",
  ],
}
